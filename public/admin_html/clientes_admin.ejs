<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pagina de Administrador</title>
    <link rel="stylesheet" href="../css/style_page_admin.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <style>
    table {
      border-collapse: collapse;
      width: 80%;
      margin: 0 auto;
    }

    th, td {
      text-align: left;
      padding: 8px;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #f2f2f2;
    }

    .container {
      display: flex;
      justify-content: space-around;
      align-items: center;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
    <div class="menu">
        <ion-icon name="menu-outline"></ion-icon>
        <ion-icon name="close-outline"></ion-icon>
    </div>

    <div class="barra-lateral">
        <div>
            <div class="nombre-pagina">
                <ion-icon id="bed" name="bed-outline"></ion-icon>
                <span>Hotel Boulevard</span>
            </div>
        </div>

        <nav class="navegacion">
            <ul>
                <li>
                    <a id="inbox" href="./reclamos_admin.html">
                        <ion-icon name="document-text-outline"></ion-icon>
                        <span>Reclamos</span>
                    </a>
                </li>
            </ul>
            <ul>
                <li>
                    <a id="inbox" href="./reservas_admin.html">
                        <ion-icon name="calendar-number-outline"></ion-icon>
                        <span>Reservas</span>
                    </a>
                </li>
            </ul>
            <ul>
                <li>
                    <a id="inbox" href="./habitaciones_admin.html">
                        <ion-icon name="bed-outline"></ion-icon>
                        <span>Habitaciones</span>
                    </a>
                </li>
            </ul>
            <ul>
                <li>
                    <a id="inbox" href="./clientes_admin.ejs">
                        <ion-icon name="accessibility-outline"></ion-icon>
                        <span>Clientes</span>
                    </a>
                </li>
            </ul>
        </nav>
        
        <div>
            <div class="linea"></div>

            <div class="modo-oscuro">
                <div class="info">
                    <ion-icon name="moon-outline"></ion-icon>
                    <span>Modo oscuro</span>
                </div>
                <div class="switch">
                    <div class="base">
                        <div class="circulo">                 
                        </div>
                    </div>
                </div>
            </div>
    
            <div class="usuario">
                <img src="../img/usuario_admin.png" alt="">
                <div class="info-usuario">
                    <div class="nombre-email">
                        <span class="nombre">Piter</span>
                        <span class="email">piterm555perez@gmail.com</span>
                    </div>
                    <ion-icon name="ellipsis-vertical-outline"></ion-icon>
                </div>
            </div>
        </div>

    </div>
    <main>
        <div class="container">
            <h2>Lista de Usuarios</h2>
        </div>
        <table id="userTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Tipo de Documento</th>
                    <th>Número de Documento</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Correo</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(user) { %>
                    <tr>
                        <td><%= user.idPersona %></td>
                        <td><%= user.nombres %></td>
                        <td><%= user.apellidos %></td>
                        <td><%= user.tipo_doc %></td>
                        <td><%= user.numero_doc %></td>
                        <td><%= user.fecha_nacimiento %></td>
                        <td><%= user.direccion %></td>
                        <td><%= user.telefono %></td>
                        <td><%= user.correo %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="../scripts/script_page_admin.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
    $(document).ready(function() {
        $('#userTable').DataTable();
    });
    </script>
</body>
</html>